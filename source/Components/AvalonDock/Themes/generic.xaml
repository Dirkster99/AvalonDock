						</MultiDataTrigger>
						<DataTrigger Binding="{Binding Path=CanClose}" Value="false">
							<Setter TargetName="DocumentCloseButton" Property="Visibility" Value="Collapsed" />
						</DataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
